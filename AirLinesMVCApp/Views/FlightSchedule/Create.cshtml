@model AirLinesMVCApp.Models.FlightSchedule

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FlightSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FlightNo" class="control-label"></label>
                 <select asp-for="FlightNo" class="form-control">
                    @foreach (SelectListItem flight in await Helper.GetFlights())
                    {
                        <option value="@flight.Value">@flight.Text</option>
                    }
                </select> 
                @* <input asp-for="FlightNo" class="form-control"/> *@
                <span asp-validation-for="FlightNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightDate" class="control-label"></label>
                <input asp-for="FlightDate" class="form-control" />
                <span asp-validation-for="FlightDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartTime" class="control-label"></label>
                <input asp-for="DepartTime" class="form-control" />
                <span asp-validation-for="DepartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArriveTime" class="control-label"></label>
                <input asp-for="ArriveTime" class="form-control" />
                <span asp-validation-for="ArriveTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
